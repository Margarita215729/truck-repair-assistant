{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_MAPBOX_TOKEN": "@mapbox_token",
    "MONGODB_URI": "@mongodb_uri",
    "AZURE_PROJECTS_ENDPOINT": "@azure_projects_endpoint",
    "AZURE_AGENT_ID": "@azure_agent_id"
  }
}
